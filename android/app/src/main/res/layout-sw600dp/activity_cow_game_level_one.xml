<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9FBF9"
    tools:context=".CowGameLevelOne">

    <ImageView
        android:id="@+id/cowGameBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cow_game_background" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#F8A62B"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/goToCountingGameMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:scaleX="0.9"
            android:scaleY=".9"
            app:srcCompat="@drawable/hut" />

        <ImageButton
            android:id="@+id/practiceIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:scaleX="0.9"
            android:scaleY=".9"
            app:srcCompat="@drawable/practice_icon" />

    </LinearLayout>

    <TextView
        android:id="@+id/instructionText"
        android:layout_width="311dp"
        android:layout_height="80dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/c_game_l2_instruction_background"
        android:fontFamily="@font/poetsen_one_regular"
        android:gravity="center_horizontal|center_vertical"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Find the cows!" />

    <ImageView
        android:id="@+id/barn"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_marginBottom="356dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/barn" />

    <ImageView
        android:id="@+id/MamaCow"
        android:layout_width="340dp"
        android:layout_height="220dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/cow_game_main_cow" />

    <ImageView
        android:id="@+id/babyCowPos1"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="104dp"
        app:layout_constraintBottom_toBottomOf="@+id/barn"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baby_cow" />

    <ImageView
        android:id="@+id/babyCowPos2"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:layout_marginStart="252dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/barn"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baby_cow" />

    <ImageView
        android:id="@+id/babyCowPos3"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="128dp"
        app:layout_constraintBottom_toBottomOf="@+id/barn"
        app:layout_constraintStart_toStartOf="@+id/barn"
        app:srcCompat="@drawable/baby_cow" />

    <ImageView
        android:id="@+id/babyCowPos4"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="104dp"
        app:layout_constraintBottom_toBottomOf="@+id/barn"
        app:layout_constraintEnd_toEndOf="@+id/barn"
        app:srcCompat="@drawable/baby_cow" />

    <ImageView
        android:id="@+id/babyCowPos5"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toBottomOf="@+id/barn"
        app:layout_constraintEnd_toEndOf="@+id/barn"
        app:srcCompat="@drawable/baby_cow" />

    <ImageView
        android:id="@+id/babyCowPos6"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:layout_marginEnd="256dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/barn"
        app:layout_constraintEnd_toEndOf="@+id/barn"
        app:srcCompat="@drawable/baby_cow" />

    <ImageView
        android:id="@+id/babyCowPos7"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:layout_marginStart="152dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/barn"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baby_cow" />

    <ImageView
        android:id="@+id/babyCowPos8"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:layout_marginEnd="360dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/barn"
        app:layout_constraintEnd_toEndOf="@+id/barn"
        app:srcCompat="@drawable/baby_cow" />

    <ImageView
        android:id="@+id/babyCowPos9"
        android:layout_width="57dp"
        android:layout_height="77dp"
        android:layout_marginEnd="368dp"
        android:layout_marginBottom="128dp"
        app:layout_constraintBottom_toBottomOf="@+id/barn"
        app:layout_constraintEnd_toEndOf="@+id/barn"
        app:srcCompat="@drawable/baby_cow" />

    <ImageView
        android:id="@+id/babyCowPos10"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="128dp"
        app:layout_constraintBottom_toBottomOf="@+id/barn"
        app:layout_constraintEnd_toEndOf="@+id/barn"
        app:srcCompat="@drawable/baby_cow" />

    <ImageView
        android:id="@+id/babyCowPos11"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:layout_marginEnd="184dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/barn"
