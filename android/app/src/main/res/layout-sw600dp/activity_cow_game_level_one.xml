        <ImageView
            android:id="@+id/foundCowPos7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/baby_cow" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/foundCowContainer3"
        android:layout_width="276dp"
        android:layout_height="71dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/foundCowContainer2"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/foundCowPos8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/baby_cow" />

        <ImageView
            android:id="@+id/foundCowPos9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/baby_cow" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/foundCowContainer4"
        android:layout_width="276dp"
        android:layout_height="71dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/foundCowContainer3"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/foundCowPos10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/baby_cow" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>