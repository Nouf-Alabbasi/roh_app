<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9FBF9"
    tools:context=".Home">

    <ImageView
        android:id="@+id/homeScreenBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/home_background" />

    <ImageView
        android:id="@+id/homeScreenGirl"
        android:layout_width="452dp"
        android:layout_height="690dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.968"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/homeScreenBackground"
        app:layout_constraintVertical_bias="0.929"
        app:srcCompat="@drawable/girl" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="486dp"
        android:layout_height="146dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="#F8A62B"
        android:backgroundTintMode="add"
        android:fontFamily="@font/piedra"
        android:text="Click here to start!"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:cornerRadius="100px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/homeScreenSpeechBubble"
        android:layout_width="442dp"
        android:layout_height="290dp"
        android:layout_marginEnd="284dp"
        android:layout_marginBottom="516dp"
        app:layout_constraintBottom_toBottomOf="@+id/homeScreenGirl"
        app:layout_constraintEnd_toEndOf="@+id/homeScreenGirl"
        app:srcCompat="@drawable/speech_bubble" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="343dp"
        android:layout_height="132dp"
        android:fontFamily="@font/piedra"
        android:text="Hello \nIthute le nna!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@+id/homeScreenSpeechBubble"
        app:layout_constraintEnd_toEndOf="@+id/homeScreenSpeechBubble"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="@+id/homeScreenSpeechBubble"
        app:layout_constraintTop_toTopOf="@+id/homeScreenSpeechBubble"
        app:layout_constraintVertical_bias="0.392" />

    <ImageButton
        android:id="@+id/infoIconHome"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/info_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>