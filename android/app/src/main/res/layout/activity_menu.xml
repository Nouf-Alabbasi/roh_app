<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9fbf9"
    tools:context=".Menu" >

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu_background" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/topMenu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/letterHuntCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#F8A62B"
                app:cardCornerRadius="50dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="15sp">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="178dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@drawable/letter_hunt_card_graphics" />

                    <TextView
                        android:id="@+id/letterHuntCardText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poetsen_one_regular"
                        android:text="Letter Hunt with Mr. Monkey"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="22sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cowGameCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#F8A62B"
                app:cardCornerRadius="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="15sp">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="178dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@drawable/cow_game_card_image" />

                    <TextView
                        android:id="@+id/imagineTimeCardText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poetsen_one_regular"
                        android:text="Counting with Mama Cow"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="22sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poetsen_one_regular"
            android:shadowColor="@android:color/black"
            android:shadowRadius="10"
            android:text="Menu"
            android:textAlignment="center"
            android:textColor="#F8A62B"
            android:textSize="48sp" />

        <LinearLayout
            android:id="@+id/bottomMenu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/getReadyCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#F8A62B"
                app:cardCornerRadius="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="15sp">

                    <ImageView
                        android:id="@+id/readyCardImagine"
                        android:layout_width="178dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@drawable/ready_card_image" />

                    <TextView
                        android:id="@+id/readyCardText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poetsen_one_regular"
                        android:text="Get Ready With Bontle"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="22sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/wordsGameCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#F8A62B"
                app:cardCornerRadius="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="15sp">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="178dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@drawable/imagine_graphics" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poetsen_one_regular"
                        android:text="Imagine Time!"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="22sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>