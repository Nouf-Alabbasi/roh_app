<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9FBF9"
    tools:context=".WordsGameLevelSelect">

    <LinearLayout
        android:id="@+id/wordGameMainScreenMenuBar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#F8A62B"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/goToImagineGameMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:tint="#8FCF44"
            app:srcCompat="@drawable/hut" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/wordGameMainScreenMenuBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu_background" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/wordGameMainScreenMenuBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView25">

        <androidx.cardview.widget.CardView
            android:id="@+id/level1Card"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="30dp"
            android:background="#F8A62B"
            app:cardBackgroundColor="#F8A62B"
            app:cardCornerRadius="50dp">

            <TextView
                android:id="@+id/level1Text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poetsen_one_regular"
                android:gravity="center_horizontal|center_vertical"
                android:shadowColor="@android:color/black"
                android:text="LEVEL 1"
                android:textColor="@android:color/white"
                android:textSize="36sp" />

            <ImageView
                android:id="@+id/level1Image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_marginRight="10dp"
                android:textAlignment="viewEnd"
                app:srcCompat="@drawable/draw_game_level_1_image" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/level2Card"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="30dp"
            android:background="#F8A62B"
            app:cardBackgroundColor="#F8A62B"
            app:cardCornerRadius="50dp">

            <TextView
                android:id="@+id/level2Text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poetsen_one_regular"
                android:gravity="center_horizontal|center_vertical"
                android:shadowColor="@android:color/black"
                android:text="LEVEL 2"
                android:textColor="@android:color/white"
                android:textSize="36sp" />

            <ImageView
                android:id="@+id/level2Image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/draw_game_level_2_image" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/level3Card"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="30dp"
            android:background="#F8A62B"
            app:cardBackgroundColor="#F8A62B"
            app:cardCornerRadius="50dp">

            <TextView
                android:id="@+id/level3Text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poetsen_one_regular"
                android:gravity="center_horizontal|center_vertical"
                android:shadowColor="@android:color/black"
                android:text="LEVEL 3"
                android:textColor="@android:color/white"
                android:textSize="36sp" />

            <ImageView
                android:id="@+id/level3Image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/draw_game_level_3_image" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ImageButton
        android:id="@+id/infoIconCowGame2"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/info_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>